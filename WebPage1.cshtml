@using WebMatrix.Data;
@{
    var provider = "System.Data.SqlClient";
    var db = Database.OpenConnectionString(@"Data Source=(LocalDB)\MSSQLLocalDB;AttachDbFilename=c:\users\lab\documents\visual studio 2015\Projects\FilmRobotu\FilmRobotu\App_Data\FilmMovies.mdf;Integrated Security=True", provider);
    var selectedData = db.Query("SELECT * FROM Movies");
    var grid = new WebGrid(source: selectedData, rowsPerPage: 15);
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Movies</title>
    <style type="text/css">
        .grid {
            margin: 4px;
            border-collapse: collapse;
            width: 600px;
        }

            .grid th, .grid td {
                border: 1px solid #C0C0C0;
                padding: 5px;
            }

        .head {
            background-color: #E8E8E8;
            font-weight: bold;
            color: #FFF;
        }

        .alt {
            background-color: #E8E8E8;
            color: #000;
        }
    </style>
</head>
<body>
    <h1>Movies</h1>
    <div>
        @grid.GetHtml(
                tableStyle: "grid",
                headerStyle: "head",
                alternatingRowStyle: "alt",
                columns: grid.Columns(
                    grid.Column("Title"),
                    grid.Column("Genre"),
                    grid.Column("Year")
                )
            )
    </div>
</body>
</html>
